#pragma once
#include <memory>
#include <functional>
namespace flow {

    template <typename T>
    using UniPtr = std::unique_ptr<T>;

    template <typename T>
    using ShrdPtr = std::shared_ptr<T>;

    template <typename T>
    using WeakPtr = std::weak_ptr<T>;

    template <typename T>
    using FuncDeleter = std::function<void(T*)>;

    template <typename T>
    using UniPtrF = std::unique_ptr<T, FuncDeleter<T>>;
    
    template <typename T, typename D>
    using UniPtrD = std::unique_ptr<T, D>;

    template <typename T>
    using RefPtr = T*;
}
